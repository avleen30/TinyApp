<h1>Your Short URLs</h1>

<!-- Adding the Login Form -->
<% if (!username) { %>
  <form method="POST" action="/login">
    <input name="email" type="text" placeholder="enter your email" style="width: 280px">
    <input name="password" type="password" placeholder="enter your password" style="width: 280px">
    <input type="submit" value="submit">

  </form>
  <%  } else { %>
  <p>Hello, <%= username %></p>
    <form method="POST" action="/logout">
    <input type="submit" value="logout">
  </form>
  <% }; %>
